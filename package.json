{
  "name": "webnomad-bulma-template",
  "version": "0.2.0",
  "description": "Webnomad setup using Bulma",
  "keywords": [
	"dyne",
	"webnomad",
    "sass",
    "bulma",
    "css",
    "start"
  ],
  "author": "Denis Roio <jaromil@dyne.org> (https://dyne.org)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015-ie": "^6.7.0",
    "bulma": "^0.6.0",
    "http-server": "^0.11.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^4.1.1"
  },
  "scripts": {
    "css-deploy": "npm-run-all css-build css-postcss",
    "css-build": "node-sass _sass/main.scss pub/css/main.css",
    "css-postcss": "postcss --use autoprefixer --output pub/css/main.css pub/css/main.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy": "npm-run-all --parallel css-deploy js-build index-build",
    "js-build": "babel _javascript --out-dir pub/lib",
    "js-watch": "npm run js-build -- --watch",
    "index-watch": "_shell/markdown-inline-tag -w views/index.html pub/index.html",
    "index-build": "_shell/markdown-inline-tag views/index.html pub/index.html",
    "preview": "http-server ./pub",
    "start": "npm-run-all index-build css-build --parallel css-watch js-watch index-watch preview"
  }
}
